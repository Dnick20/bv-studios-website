{
  "name": "bv-studios-website",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "prisma generate && next build",
    "migrate:deploy": "prisma migrate deploy",
    "migrate:dev": "prisma migrate dev --name add-wedding-questionnaire",
    "start": "next start",
    "lint": "next lint",
    "test": "playwright test",
    "test:ui": "playwright test --ui",
    "test:report": "playwright show-report",
    "seed": "node prisma/seed.js",
    "validate": "node scripts/validate-code.js",
    "pre-commit": "npm run validate",
    "prepare": "husky",
    "spell:add": "node scripts/add-spell-check-word.js",
    "check-duplicates": "node scripts/duplicate-checker.js",
    "cursor:check": "npm run check-duplicates && echo '\n✅ Cursor AI: Safe to proceed - No duplicates detected'",
    "cursor:search": "node scripts/cursor-helper.js",
    "cursor:imports": "echo '\n📦 Available Centralized Imports:' && cat lib/imports.js 2>/dev/null || echo 'lib/imports.js not found'",
    "cursor:structure": "echo '\n📁 Project Structure:' && find . -type f -name '*.js' -not -path './node_modules/*' | head -20 && echo '...(truncated)'",
    "cursor:components": "echo '\n🧩 Available Components:' && find ./components -name '*.js' 2>/dev/null | sed 's|./components/||' | sed 's|.js$||' || echo 'No components directory found'"
  },
  "prisma": {
    "seed": "node prisma/seed.js"
  },
  "dependencies": {
    "@auth/prisma-adapter": "^2.10.0",
    "@aws-sdk/client-s3": "^3.859.0",
    "@aws-sdk/s3-request-presigner": "^3.859.0",
    "@headlessui/react": "^2.2.4",
    "@heroicons/react": "^2.2.0",
    "@prisma/client": "^5.10.2",
    "@stripe/react-stripe-js": "^3.9.0",
    "@stripe/stripe-js": "^7.8.0",
    "@vercel/analytics": "^1.5.0",
    "autoprefixer": "^10.4.17",
    "bcryptjs": "^2.4.3",
    "formidable": "^3.5.4",
    "framer-motion": "^11.18.2",
    "jsonwebtoken": "^9.0.2",
    "micro": "^10.0.1",
    "next": "^15.4.5",
    "next-auth": "^5.0.0-beta.29",
    "node-cron": "^4.2.1",
    "nodemailer": "^6.9.8",
    "otplib": "^12.0.1",
    "postcss": "^8.4.35",
    "posthog-js": "^1.258.5",
    "posthog-node": "^5.6.0",
    "prisma": "^5.10.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "stripe": "^14.25.0",
    "tailwindcss": "^3.4.0",
    "zod": "^4.0.17"
  },
  "devDependencies": {
    "@playwright/test": "^1.54.2",
    "@types/bcryptjs": "^2.4.6",
    "@types/node": "^20.11.0",
    "@types/nodemailer": "^6.4.14",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "eslint": "^8.56.0",
    "eslint-config-next": "14.1.0",
    "husky": "^9.1.7",
    "typescript": "^5.3.0"
  }
}
